import example.*

describe "Tests" {
  const harry = new Estudiante(casa=gryffindor, sangrePura=true, habilidad=9, salud=100, hechizos=#{hechizo1})
  const ron = new Estudiante(casa=gryffindor, sangrePura=true, habilidad=15, salud= 120, hechizos=#{hechizo1})
  const draco = new Estudiante(casa=slytherin, sangrePura=true, habilidad=20, salud=70, hechizos=#{hechizo1})
