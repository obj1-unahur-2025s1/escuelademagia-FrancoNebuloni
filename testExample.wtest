  const hechizo1 = new HechizoComun(nivDificultad=2, dolorUnico = 6)
  const hechizo2 = new HechizoImperdonable(nivDificultad = 7, dolorUnico = 14)
  test "harry si sabe un carajo" {
    assert.that(harry.puedeUsar(hechizo1))
  }

  test "ron hace algo" {
    assert.that(ron.puedeUsar(hechizo1))
  }

  test "draco" {
    assert.that(draco.puedeUsar(hechizo1))
  }

  test "hermione es una inutil" {
    assert.notThat(hermione.puedeUsar(hechizo1))
  }
}